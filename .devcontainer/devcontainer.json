{
  "name": "OMJL Tutorial",
  "image": "ghcr.io/jkrt/omjl-tutorial:latest",
  "postCreateCommand": "echo 'Environment ready! Start Jupyter with: julia -e \"using IJulia; notebook(dir=\\\"notebooks\\\")\"'",
  "customizations": {
    "vscode": {
      "extensions": [
        "julialang.language-julia",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "julia.executablePath": "/usr/local/bin/julia"
      }
    }
  },
  "forwardPorts": [8888],
  "portsAttributes": {
    "8888": {
      "label": "Jupyter",
      "onAutoForward": "openBrowser"
    }
  }
}
